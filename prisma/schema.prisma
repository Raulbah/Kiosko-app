generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum OrderStatus {
  PENDING      // Pendiente (Recién llegada)
  IN_PROGRESS  // Preparando (En cocina)
  READY        // Lista (Para recoger)
  COMPLETED    // Entregada (Histórico)
  CANCELLED    // Cancelada
}

enum MovementType {
  IN_PURCHASE    // Entrada por compra
  OUT_SALE       // Salida por venta
  OUT_LOSS       // Merma / Caducidad / Robo
  ADJUSTMENT     // Ajuste de inventario físico
}

// --- CORE SYSTEM & RBAC ---

model Branch {
  id        String   @id @default(uuid())
  name      String
  slug      String    @unique
  address   String?
  isActive  Boolean  @default(true)
  users     User[]
  products  Product[]
  orders    Order[]
  inventoryStocks    InventoryStock[]
  inventoryMovements InventoryMovement[]
  createdAt DateTime @default(now())
}

model Role {
  id          String   @id @default(uuid())
  name        String   // Ej: "Admin", "Cajero", "ClienteKiosko"
  permissions Permission[]
  users       User[]
}

model Module {
  id          String   @id @default(uuid())
  name        String   // Ej: "inventory", "users", "pos"
  slug        String   @unique
  permissions Permission[]
}

model Permission {
  id        String  @id @default(uuid())
  roleId    String
  moduleId  String
  canCreate Boolean @default(false)
  canRead   Boolean @default(false)
  canUpdate Boolean @default(false)
  canDelete Boolean @default(false)
  role      Role    @relation(fields: [roleId], references: [id])
  module    Module  @relation(fields: [moduleId], references: [id])

  @@unique([roleId, moduleId]) // Un rol solo tiene una config de permisos por módulo
}

model User {
  id           String   @id @default(uuid())
  employeeId   String   @unique // Login ID
  password     String
  name         String
  image        String?
  roleId       String
  branchId     String
  isActive     Boolean  @default(true)
  role         Role     @relation(fields: [roleId], references: [id])
  branch       Branch   @relation(fields: [branchId], references: [id])
  orders       Order[]
  inventoryMovements InventoryMovement[]
  createdAt    DateTime @default(now())
}

// --- NEGOCIO (Ejemplo Modular) ---

model Category {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  image     String?
  products  Product[]
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  imageUrl    String?
  categoryId  String
  branchId    String?   // Filtrado por sucursal
  isActive    Boolean  @default(true)
  // Relaciones
  modifierGroups ModifierGroup[]
  sizes          ProductSize[]
  category    Category @relation(fields: [categoryId], references: [id])
  branch      Branch?   @relation(fields: [branchId], references: [id])
  inventoryStocks InventoryStock[]
  inventoryMovements InventoryMovement[]
  orderItems  OrderItem[]
  createdAt   DateTime @default(now())
}

model ProductSize {
  id        String   @id @default(uuid())
  name      String   // Ej: "Chico", "Mediano", "Grande"
  price     Decimal  @db.Decimal(10, 2)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ModifierGroup {
  id        String           @id @default(uuid())
  name      String           // Ej: "Toppings Incluidos", "Extras"
  minSelect Int              @default(0) // 0 = Opcional, 1+ = Obligatorio
  maxSelect Int              @default(1) // Límite de selección
  includedSelect Int              @default(0)     // Cuántos son gratis
  extraPrice     Decimal          @default(0.00) @db.Decimal(10, 2) // Precio si se excede el incluido
  productId String
  product   Product          @relation(fields: [productId], references: [id], onDelete: Cascade)
  options   ModifierOption[]
}

model ModifierOption {
  id        String        @id @default(uuid())
  name      String        // Ej: "Granola", "Chocolate"
  price     Decimal       @default(0.00) @db.Decimal(10, 2) // Si es 0 es gratis
  groupId   String
  
  group     ModifierGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model Order {
  id        String      @id @default(uuid())
  customerName String
  total     Decimal
  status    OrderStatus @default(PENDING)      // PENDING, COMPLETED, CANCELLED
  userId    String?     // Puede ser nulo si es kiosko anónimo, o el cajero que lo creó
  branchId  String
  user      User?       @relation(fields: [userId], references: [id])
  branch    Branch      @relation(fields: [branchId], references: [id])
  items     OrderItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Precio unitario final (Base + Extras)
  
  options   Json?   
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model InventoryStock {
  id        String   @id @default(uuid())
  quantity  Int      @default(0)
  minStock  Int      @default(10) // Alerta de stock bajo
  location  String?  // Ej. "Pasillo 4"
  
  productId String
  branchId  String

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  branch    Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([productId, branchId]) // Un producto solo aparece una vez por sucursal
}

model InventoryMovement {
  id          String       @id @default(uuid())
  type        MovementType
  quantity    Int          // Positivo o negativo según lógica, o valor absoluto
  reason      String?      // Ej. "Pedido #123" o "Caducado Lote X"
  createdAt   DateTime     @default(now())
  
  productId   String
  branchId    String
  userId      String       // Quién hizo el movimiento

  product     Product      @relation(fields: [productId], references: [id])
  branch      Branch       @relation(fields: [branchId], references: [id])
  user        User         @relation(fields: [userId], references: [id])
}